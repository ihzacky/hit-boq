<odoo>
    <record id="action_menu_material_products" model="ir.actions.act_window">
        <field name="name">Material Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'consu')]</field>
        <field name="context">{'default_type': 'consu', 'default_detailed_type': 'consu'}</field>
    </record>

    <record id="action_menu_service_products" model="ir.actions.act_window">
        <field name="name">Service Products</field>
        <field name="res_model">product.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type', '=', 'service')]</field>
        <field name="context">{'default_type': 'service', 'default_detailed_type': 'service'}</field>
    </record>

    <record id="product_form_view_inherit_boq" model="ir.ui.view">
        <field name="name">product.product.form.inherit.boq</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button"
                        name="action_view_work_units"
                        type="object"
                        icon="fa-cogs">
                    <field name="work_unit_count" widget="statinfo" string="Work Units"/>
                </button>
            </div>
        </field>
    </record>
</odoo>